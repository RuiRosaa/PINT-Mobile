<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.hardtinsa.MainPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            >

            <Button
                android:id="@+id/btn_open_menu"
                android:layout_width="46dp"
                android:layout_marginTop="10dp"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/baseline_density_small_24"
                android:onClick="openMenu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/rectangle1" />


            <TextView
                android:id="@+id/Nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="50dp"
                android:text="Nome do Cliente"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nome"
                android:layout_width="341dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:hint="Insira o nome"
                android:inputType="text" />

            <TextView
                android:id="@+id/detalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="100dp"
                android:layout_marginStart="130dp"
                android:text="NIF do Cliente" />

            <EditText
                android:id="@+id/et_NIF"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginStart="33dp"
                android:hint="insira o nif"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_marginTop="160dp"
                android:layout_marginStart="123dp"
                android:textStyle="bold"
                android:text="Morada" />

            <EditText
                android:id="@+id/et_morada"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginStart="33dp"
                android:hint="insira a morada"
                android:inputType="textPostalAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_marginTop="220dp"
                android:layout_marginStart="123dp"
                android:textStyle="bold"
                android:text="Código Postal" />

            <EditText
                android:id="@+id/et_codpostal"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginStart="33dp"
                android:hint="insira o código postal"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_marginTop="280dp"
                android:layout_marginStart="123dp"
                android:textStyle="bold"
                android:text="Localidade" />

            <EditText
                android:id="@+id/et_localidade"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginStart="33dp"
                android:hint="insira a localidade"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_marginTop="340dp"
                android:layout_marginStart="123dp"
                android:textStyle="bold"
                android:text="Email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:layout_marginStart="33dp"
                android:hint="insira o email"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_marginTop="400dp"
                android:layout_marginStart="123dp"
                android:textStyle="bold"
                android:text="Telefone" />

            <EditText
                android:id="@+id/et_telefone"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp"
                android:layout_marginStart="33dp"
                android:hint="insira o telefone"
                android:inputType="number|phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_marginTop="460dp"
                android:layout_marginStart="123dp"
                android:textStyle="bold"
                android:text="Telemovel" />

            <EditText
                android:id="@+id/et_telemovel"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="480dp"
                android:layout_marginStart="33dp"
                android:hint="insira o telemovel"
                android:inputType="number|phone" />




            <TextView
                android:id="@+id/text_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:textColorHint="@color/com_facebook_blue"
                android:layout_marginTop="11dp"
                android:text="Criar Clientes"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/internet_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="340dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/baseline_wifi_off_24"
                android:contentDescription="Internet Status" />

            <Button
                android:id="@+id/btn_criar"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="5dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/rounded_button"
                android:drawableLeft="@drawable/baseline_add_circle_24"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textColor="#124267"
                android:text="Criar"/>

            <Button
                android:id="@+id/back_button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="530dp"
                android:background="@drawable/baseline_arrow_circle_left_24"
                android:textColor="#FFFFFF" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
            app:layout_constraintTop_toTopOf="@+id/frameLayout" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/bottom_nav" />

    <com.google.android.material.navigation.NavigationView
        app:theme="@style/ActionButton"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        />


</androidx.drawerlayout.widget.DrawerLayout>