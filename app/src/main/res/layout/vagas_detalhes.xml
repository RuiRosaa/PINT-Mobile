<!-- create_idea.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textDescriptionOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editDescriptionOp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição da oportunidade" />

    <TextView
        android:id="@+id/textDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes:"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editDetailsOp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detalhes da oportunidade" />
    <TextView
        android:id="@+id/textTipoProjetoOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Projeto:"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editTipoProjetoOp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de projeto da oportunidade" />

    <TextView
        android:id="@+id/textAreaNegocioOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Área de Negócio:"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editAreaNegocioOp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Área de negócio da oportunidade" />

    <TextView
        android:id="@+id/textOpCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerBusinessArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecione a área de negócio"
        android:entries="@array/estados" />

    <Button
        android:id="@+id/btnRefreshOp"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerBusinessArea"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#0066FF"
        android:text="Enviar Candidatura" />


</LinearLayout>
