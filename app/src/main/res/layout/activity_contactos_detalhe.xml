<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    tools:context="com.sft4all.MainPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            >

            <Button
                android:id="@+id/btn_open_menu"
                android:layout_width="46dp"
                android:layout_marginTop="10dp"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/baseline_density_small_24"
                android:onClick="openMenu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/rectangle1" />

            <TextView
                android:id="@+id/text_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:textColorHint="@color/com_facebook_blue"
                android:layout_marginTop="11dp"
                android:text="Contactos Detalhe"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="466dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/baseline_arrow_circle_left_24"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/internet_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="340dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/baseline_wifi_off_24"
                android:contentDescription="Internet Status" />

        </FrameLayout>

        <TextView
            android:id="@+id/et_sumario"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="70dp"
            android:text="SumÃ¡rio"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/baseline_description_24"
            android:drawablePadding="8dp"
            android:paddingBottom="9dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:paddingBottom="9dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nome"/>

        <TextView
            android:id="@+id/tv_morada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/baseline_home_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_email" />

        <TextView
            android:id="@+id/tv_funcao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/baseline_outbox_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_morada" />

        <TextView
            android:id="@+id/tv_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_funcao" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/baseline_phone_android_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_telefone" />


        <TextView
            android:id="@+id/tv_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/baseline_person_242"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/tv_phone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/bottom_nav" />

    <com.google.android.material.navigation.NavigationView
        app:theme="@style/ActionButton"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        />


</androidx.drawerlayout.widget.DrawerLayout>